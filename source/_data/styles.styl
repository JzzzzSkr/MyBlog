.text-center {
  text-align: center;
}

.site-author-image {
  background: white;
  background-clip: content-box;
  aspect-ratio: 1 / 1;
  object-fit: cover;
}

.sidebar .sidebar-button {
  &:not(:last-child) {
    margin-bottom: 15px;
  }

  a {
    button($orange);
    border: 1px solid $orange;
    border-radius: 4px;
    // To make line-height in button mixin work
    display: inline-block;

    .fa, .fab, .far, .fas {
      margin-right: 5px;
    }

    if (($scheme == 'Pisces') or ($scheme == 'Gemini')) {
      border: 0;
      color: $orange;
      display: block;

      &:hover {
        background: none;
        border: 0;
        color: darken($orange, 20%);
      }
    }
  }
}

.cc-license img {
    max-width: 27%;
    display: inline-block;
    display: none
}

.links-of-author a {
    font-size: 0.9em;
}

.fa-fw {
    text-align: center;
    width: 2.25em;
}

.footer-inner .footer-custom{
  display: none
}